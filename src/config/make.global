# make flag
MAKEFLAGS := -s --no-print-directory

# compile macro
CC := g++

# compile flags
CCFLAGS := -lCppLinuxSerial
OBJCCFLAGS := $(CCFLAGS) -c

# recursive make and clean
.PHONY: build-subdirs
build-subdirs: $(DIRS)

.PHONY: $(DIRS)
$(DIRS):
	make $(MAKEFLAGS) -C $@ all
	
.PHONY: clean-subdirs
clean-subdirs:
	@for dir in $(DIRS); do \
		$(MAKE) $(MAKEFLAGS) -C $$dir clean; \
	done

# dependencies
%.o: %.c*
	@echo -e "\t" CC $(OBJCCFLAGS) $< -o $@
	@$(CC) $(OBJCCFLAGS) $< -o $@
